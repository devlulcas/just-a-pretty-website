---
export interface Props {
  number: string;
  description: string;
};

const { number, description } = Astro.props;
---

<a href={`/experiments/${number}`}>
  <h2>{number}</h2>
  <p>{description}</p>
</a>


<style>
  a {
    display: block;
    padding: 1rem;
    border-bottom: 1px solid #eee;
    text-decoration: none;
    color: #333;

    backdrop-filter: blur(5px);
		background-image: linear-gradient(45deg, var(--pale-accent-color) 25%, transparent 25%, transparent 75%, var(--pale-accent-color) 75%, var(--pale-accent-color)), linear-gradient(-45deg, var(--pale-accent-color) 25%, transparent 25%, transparent 75%, var(--pale-accent-color) 75%, var(--pale-accent-color));
    transition: all 150ms ease-in-out;
  }

  a:hover {
    background-position: 0 0, 10px 10px;
    background-color: var(--pale-accent-color);
  }

  h2 {
    margin: 0;
    font-size: 1.5rem;
  }

  p {
    margin: 0;
    font-size: 1rem;
  }

  @media (min-width: 768px) {
    a {
      display: flex;
      align-items: center;
    }

    h2 {
      margin-right: 1rem;
    }
  }
</style>
