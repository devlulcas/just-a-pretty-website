---
import { Logo } from '@/components/ui/logo';
---

<header class="header">
  <a class="link" href="/">
    <Logo />
  </a>

  <nav>
    <ul class="list">
      <li class="list-item"><a class="link" href="/about">About</a></li>
      <li class="list-item"><a class="link" href="/experiments">Stuff</a></li>
      <li class="list-item">
        <a class="link" href="https://www.lucasrego.tech/">My website</a>
      </li>
    </ul>
  </nav>
</header>

<style>
  .header {
    height: var(--header-height);
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    position: relative;
  }

  .list {
    display: flex;
    list-style: none;
  }

  .list-item {
    margin-left: 1rem;
  }

  .link {
    text-decoration: none;
    color: white;
    font-weight: bold;
    font-size: clamp(0.85rem, 1vw, 1rem);
  }
</style>
