---
import hibiscusInBlack from '../assets/images/sunset.webp';
import '../assets/styles/global.css';
import '../assets/styles/reset.css';
import '../assets/styles/vars.css';

import FontLoader from '../components/FontLoader.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<FontLoader />
	</head>

	<body>
		<img
			class="background-image"
			src={hibiscusInBlack}
			alt="Hibiscus in black"
		/>

		<span class="background-image-overlay"></span>

		<div style="height: var(--min-content-height);">
			<slot />
		</div>

		<style is:global>
			html {
				background-color: var(--background-color);
				color: var(--foreground-color);
				font-family: var(--font-mono);
			}

			.background-image {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 30vh;
				object-fit: cover;
				z-index: -1;
			}

			.background-image-overlay {
				content: '';
				position: absolute;
				top: calc(var(--header-height) * 2);
				left: 0;
				width: 100%;
				height: 20vh;
				background: linear-gradient(
					180deg,
					transparent 0%,
					var(--background-color) 50%
				);
			}
		</style>
	</body>
</html>
